@page
@model Shop2City.WebHost.Pages.Admin.Users.IndexModel
@{
    ViewData["Title"] = "لیست کاربران";
}
<div class="row">
    <div class="col-lg-12">
        <div class="card-box">
            <div class="dropdown pull-right">
                <a href="#" class="dropdown-toggle arrow-none card-drop" data-toggle="dropdown" aria-expanded="false">
                    <i class="fa fa-spin fa-cog" style="width: auto;margin-right: 10px;"></i>
                </a>
                <div class="dropdown-menu dropdown-menu-right">
                    <!-- item-->
                    <a href="/Admin/Users/ListDeleteUsers" class="dropdown-item">لیست کاربران حذف شده</a>
                </div>
            </div>
            <h4 class="m-t-0 header-title">لیست کاربران</h4>
            <a class="btn btn-success mb-2" asp-page="Create"><i class="fa fa-plus-circle"></i>&nbsp;<span> افزودن لیست کاربران</span></a>


            <form>
                <div class="form-row align-items-center">
                    <div class="col-8">
                        <input type="text" class="form-control mb-2" name="filterFirstName" placeholder="نام ">
                    </div>

                    <div class="col-4">
                        <button type="submit" class="btn btn-primary mb-2"><i class="fa fa-search"></i>&nbsp;<span>بگرد</span></button>
                        <button type="submit" class="btn btn-primary mb-2"><i class="fa fa-refresh" href="/Admin/Users"></i>&nbsp;<span>خالی</span></button>
                    </div>
                </div>
            </form>

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>شناسه کاربر</th>
                        <th>تاریخ ثبت نام</th>
                        <th>نام کامل کاربر</th>
                        <th>شماره تماس</th>
                        
                        <th>دستورات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.userForAdmin.users)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.CreateDate.ToShamsi()</td>
                            <td>@item.FirstName @item.LastName</td>
                            <td>@item.CellPhone - @item.TelPhone</td>
                            
                            <td>
                                <a href="/Admin/Users/Edit/@item.Id" class="btn btn-icon waves-effect waves-light btn-warning">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a href="/Admin/Users/Delete/@item.Id" class="btn btn-icon waves-effect waves-light btn-danger">
                                    <i class="fa fa-remove"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
            <nav>
                <ul class="pagination pagination-split">
                    @for (var i = 1; i <= Model.userForAdmin.countPage; i++)
                    {
                        <li class="page-item @((i==Model.userForAdmin.currentPage)?"active":"")"><a class="page-link @((i==Model.userForAdmin.currentPage)?"active":"")" href="/Admin/Users/Index?pageId=@i">@i</a></li>
                    }
                </ul>
            </nav>
        </div>
</div>

 </div>


@section Scripts
{

    <script>
        $(document).ready(function () {
            $('.color').click(function () {
                var selectedColor = $(this).css('background-color');
                // اینجا میتوانید کد دیگری برای استفاده از رنگ انتخاب شده بنویسید
            });
        });

    </script>
    }
