@page "{id}"
@model Shop2City.Web.Pages.Admin.Users.EditModel
@{
    ViewData["Title"] = "ویرایش کاربر";
    List<Role> Roles = ViewData["Roles"] as List<Role>; 
}
<div class="row">
    <div class="col-md-8">
        <div class="card-box">
            <h4 class="m-t-0 m-b-30 header-title">ویرایش کاربر </h4>

            <form role="form" method="post">
                <input type="hidden" asp-for="editUser.userId">
                <input type="hidden" asp-for="editUser.password">
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-6">
                            <label asp-for="editUser.firstName"></label>
                            <input type="text" class="form-control" asp-for="editUser.firstName">
                            <span class="text-danger" asp-validation-for="editUser.firstName"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="editUser.lastName"></label>
                            <input type="text" class="form-control" asp-for="editUser.lastName">
                            <span class="text-danger" asp-validation-for="editUser.lastName"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-6">
                            <label asp-for="editUser.cellPhone"></label>
                            <input type="text" class="form-control" asp-for="editUser.cellPhone">
                            <span class="text-danger" asp-validation-for="editUser.cellPhone"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="editUser.tellPhone"></label>
                            <input type="text" class="form-control" asp-for="editUser.tellPhone">
                            <span class="text-danger" asp-validation-for="editUser.tellPhone"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="editUser.address"></label>
                    <textarea type="text" class="form-control" asp-for="editUser.address" rows="3"></textarea>
                    <span class="text-danger" asp-validation-for="editUser.address"></span>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-6">
                            <label asp-for="editUser.userName"></label>
                            <input type="text" class="form-control" asp-for="editUser.userName">
                            <span class="text-danger" asp-validation-for="editUser.userName"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="editUser.password"></label>
                            <input type="text" class="form-control" asp-for="editUser.password">
                            <span class="text-danger" asp-validation-for="editUser.password"></span>
                            <p class="help-block">در صورت وارد کردن کلمه عبور،کلمه عبور کاربر تغییر خواهد کرد.</p>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">ویرایش اطلاعات</button>
            </form>
        </div>
    </div>
    <!-- end col -->
    <div class="col-md-4">
        <div class="card-box">
            <h4 class="m-t-0 m-b-30 header-title">انتخاب نقش</h4>
            <div class="form-group row">
                <div class="col-9">
                    @foreach (var item in Roles)
                    {
                        <div>
                            <label>
                                <input type="checkbox" name="SelectedRoles" value="@item.roleId" @((Model.editUser.userRoles.Any(r => r == item.roleId) ? "checked" : ""))> @item.roleTitle
                            </label>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>