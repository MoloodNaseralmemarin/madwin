@page
@model Shop2City.Web.Pages.Admin.Users.ListDeleteUsersModel
@{
    ViewData["Title"] = "لیست کاربران حذف شده";
}
<div class="row">
    <div class="col-lg-12">
        <div class="card-box">
            <div class="dropdown pull-right">
                <a href="#" class="dropdown-toggle arrow-none card-drop" data-toggle="dropdown" aria-expanded="false">
                    <i class="fa fa-spin fa-cog" style="width: auto;margin-right: 10px;"></i>
                </a>
                <div class="dropdown-menu dropdown-menu-right">
                    <!-- item-->
                    <a asp-page="Index" class="dropdown-item">لیست کاربران</a>
                </div>
            </div>
            <form>
                <div class="form-row align-items-center">
                    <div class="col-8">
                        <input type="text" class="form-control mb-2" name="filterFirstName" placeholder="نام ">
                    </div>

                    <div class="col-4">
                        <button type="submit" class="btn btn-primary mb-2"><i class="fa fa-search"></i></button>
                        <button type="submit" class="btn btn-primary mb-2"><i class="fa fa-refresh" href="/Admin/Users"></i></button>
                    </div>
                </div>
            </form>

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>نام کامل کاربر</th>
                        <th>ایمیل</th>
                        <th>وضعیت</th>
                        <th>تاریخ ثبت نام</th>
                        <th>دستورات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.userForAdmin.users)
                    {
                        <tr>
                            <td>1</td>
                           
                            <td>@user.FirstName @user.LastName</td>
                            <td>
                                <a href="/Admin/Users/Edit/@user.Id" class="btn btn-icon waves-effect waves-light btn-warning">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a href="/Admin/Users/Delete/@user.Id" class="btn btn-icon waves-effect waves-light btn-danger">
                                    <i class="fa fa-remove"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
            <nav>
                <ul class="pagination pagination-split">
                    @for (var i = 1; i <= Model.userForAdmin.countPage; i++)
                    {
                        <li class="page-item @((i==Model.userForAdmin.currentPage)?"active":"")"><a class="page-link @((i==Model.userForAdmin.currentPage)?"active":"")" href="/Admin/Users/Index?pageId=@i">@i</a></li>
                    }
                </ul>
            </nav>
        </div>
    </div>
</div>
