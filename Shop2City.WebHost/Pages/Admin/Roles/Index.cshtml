@page
@model Shop2City.Web.Pages.Admin.Roles.IndexModel
@{
    ViewData["Title"] = "لیست نقش ها";
}
<div class="row">
    <div class="col-lg-12">
        <div class="card-box">
            <div class="dropdown pull-right">
                <a href="#" class="dropdown-toggle arrow-none card-drop" data-toggle="dropdown" aria-expanded="false">
                    <i class="fa fa-spin fa-cog" style="width: auto;margin-right: 10px;"></i>
                </a>
                <div class="dropdown-menu dropdown-menu-right">
                    <!-- item-->
                    <a href="/Admin/Users/ListDeleteUsers" class="dropdown-item">لیست نقش های حذف شده</a>
                </div>
            </div>
            <h4 class="m-t-0 header-title">لیست نقش ها</h4>
            <a class="btn btn-success mb-2" asp-page="Create"><i class="fa fa-plus-circle"></i></a>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>عنوان نقش</th>
                        <th>دستورات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var role in Model.listRoles)
                    {
                        <tr>
                            <td>1</td>
                           <td>@role.roleTitle</td>
                            <td>
                                <a href="/Admin/Roles/Edit/@role.roleId" class="btn btn-icon waves-effect waves-light btn-warning">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a href="/Admin/Roles/Delete/@role.roleId" class="btn btn-icon waves-effect waves-light btn-danger">
                                    <i class="fa fa-remove"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>
