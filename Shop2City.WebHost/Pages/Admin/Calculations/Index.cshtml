@page
@model Shop2City.WebHost.Pages.Admin.Calculations.IndexModel
@{
    ViewData["Title"] = "محصولات";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card-box">
            <h4 class="m-t-0 header-title">لیست اسامی مصرفی</h4>
            <table class="table table-striped" id="review">
                <thead>
                    <tr>
                        <th>نام </th>
                        <th>ویرایش  محصول</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.calculationModel)
                    {
                        <tr>
                            <td>
                                @item.Name
                            </td>
                            <td>
                                @item.PurchasePrice.ToString("#,0 ریال")
                            </td>
                            <td>
                                       <a href="/Admin/Calculations/Edit/@item.Id" class="btn btn-warning btn-sm">
                                    ویرایش
                                </a>
                            </td>
                           
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
