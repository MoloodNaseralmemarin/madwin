@page "{id}"
@model Shop2City.Web.Pages.Admin.ProductGroups.DeleteModel
@{
    ViewData["Title"] = "Delete";
}

<div class="container alert alert-danger">
    <form method="post">
        <input type="hidden" asp-for="deleteProductGroup.Id" />
        <input type="hidden" asp-for="deleteProductGroup.ParentId" />
        <input type="hidden" asp-for="deleteProductGroup.Title" />
        <h2>آیا از حذف نقش "@Model.deleteProductGroup.Title" مطمئن هستید </h2>
        <p>
            <input type="submit" value="حذف کن" class="btn btn-outline btn-danger" />
            <a asp-page="Index" class="btn btn-outline btn-info">انصراف</a>
        </p>
    </form>
</div>

