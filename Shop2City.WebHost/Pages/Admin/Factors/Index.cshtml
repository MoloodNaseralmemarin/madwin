@page
@model Shop2City.Web.Pages.Admin.Factors.IndexModel
@{
}

<div class="row">
    <div class="col-lg-12">
        <div class="card-box">
            <h4 class="m-t-0 header-title">لیست فاکتور</h4>
            <table class="table table-striped">
                    <tr>
                        <th>تاریخ ایجاد</th>
                        <td>شماره فاکتور</td>
                        <th>نام مشتری</th>
                        <th>قیمت کل فاکتور</th>
                        <td>مشاهده</td>
                    </tr>
                    @foreach (var item in Model.GetAllFactor)
                    {
                    <tr>
                            <td>@item.CreatedDate.ToShamsi()</td>
                            <td>@item.Id</td>
                            <td>@item.User.FirstName @item.User.LastName</td>
                            <td> @(item.FactorSum.ToString("#,0 ریال"))</td>
                            <td><a href="/Admin/Factors/ShowFactorDetail/@item.Id" title="جزیئات فاکتور"><span class="fa fa-pencil"></span></a></td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>


