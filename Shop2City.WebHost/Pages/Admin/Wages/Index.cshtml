@page
@model Shop2City.WebHost.Pages.Admin.Wages.IndexModel
@{
    ViewData["Title"] = "کارمزد";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card-box">
            <h4 class="m-t-0 header-title">کارمزد</h4>
            <table class="table table-striped" id="review">
                <thead>
                    <tr>
                        <th>تاریخ ثبت </th>
                        <th>مقدار </th>
                        <th>ویرایش  </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.listWage)
                    {
                        <tr>
                            <td>
                                @item.CreateDate.ToShamsi()
                            </td>
                            <td>
                                @item.Value
                            </td>
                            <td>
                                <a href="/Admin/Wages
/Edit/@item.Id" class="btn waves-effect waves-light btn-outline-warning" data-toggle="tooltip" title="ویرایش محصول">
                                    <span class="fa fa-pencil"></span>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>