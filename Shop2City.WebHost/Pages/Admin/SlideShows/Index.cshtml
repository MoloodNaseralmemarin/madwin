@page
@model Shop2City.Web.Pages.Admin.SlideShows.IndexModel
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card-box">
            <h4 class="m-t-0 header-title">لیست محصولات</h4>
            <a class="btn btn-success mb-2" asp-page="Create"><i class="fa fa-plus-circle"></i></a>
            <table class="table table-striped">
                <tbody>

                    @foreach (var silderShow in Model.listSlideShows)
                    {
                        <tr>
                            <td><img src="@silderShow.Link" class="img-responsive img-thumbnail" /></td>

                            <td>
                                <a href="/Admin/SlideShows/Edit/@silderShow.Id" class="btn waves-effect waves-light btn-warning">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a href="/Admin/SlideShows/Delete/@silderShow.Id" class="btn waves-effect waves-light btn-danger">
                                    <i class="fa fa-remove"></i>
                                </a>
                            </td>
                            </tr>
                            }

                    </tbody>

                </table>
            </div>
        </div>
    </div>

