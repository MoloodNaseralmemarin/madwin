@model RegisterViewModel
@{
    ViewData["Title"] = "ثبت نام";
}

<div class="container">
    <!-- Breadcrumb Start-->
    <ul class="breadcrumb">
        <li><a asp-controller="Home" asp-action="Index"><i class="fa fa-home"></i></a></li>
        <li aria-current="page">حساب کاربری</li>
        <li class="active" aria-current="page">ثبت نام</li>
    </ul>
 
    <div class="row">
        <div class="col-sm-3">
        </div>
        <div class="col-sm-8">

        @if (ViewBag.IsSuccess != null)
        {
            <div class="alert alert-success text-center ">
                <p class="help-block">با تشکر از ثبت نام شما در فروشگاه پناه پلاست</p>
                <img src="~/images/progress.gif" />
            </div>

            <script>
                // Your delay in milliseconds
                var delay = 3000;
                setTimeout(function () { window.location = "/Login"; }, delay);
            </script>
        }
        <div>

            <form class="form-horizontal" asp-action="Register" method="post">
                <fieldset id="account">
                    <legend>اطلاعات شخصی شما</legend>
                    <div class="form-group required">
                        <label asp-for="firstName" class="col-sm-2 control-label"></label>
                        <div class="col-sm-10">
                            <i class="glyphicon glyphicon-user"></i>
                            <input type="text" asp-for="firstName" class="form-control" id="firstName">
                        </div>
                    </div>
                    <div class="form-group required">
                        <span asp-validation-for="firstName"></span>
                        <label asp-for="lastName" class="col-sm-2 control-label"></label>
                        <div class="col-sm-10">
                            <i class="glyphicon glyphicon-user"></i>
                            <input asp-for="lastName" type="text" class="form-control" id="lastName">
                        </div>
                    </div>
                    <div class="form-group required">
                        <span asp-validation-for="lastName"></span>
                        <label asp-for="cellPhone" class="col-sm-2 control-label"></label>
                        <div class="col-sm-10">
                            <i class="glyphicon glyphicon-phone"></i>
                                <input type="text" asp-for="cellPhone" class="form-control" id="cellPhone" pattern="[0-9]*" inputmode="numeric">
                        </div>
                    </div>
                    <div class="form-group required">
                        <span asp-validation-for="cellPhone"></span>
                        <label asp-for="address" class="col-sm-2 control-label"></label>
                        <div class="col-sm-10">
                            <i class="glyphicon glyphicon-phone"></i>
                            <input type="text" asp-for="address" class="form-control" id="address">
                            <span asp-validation-for="address"></span>

                        </div>
                    </div>
                </fieldset>
                <fieldset>
                    <legend>رمز عبور شما</legend>
                    <div class="form-group required">
                        <span asp-validation-for="address"></span>
                        <label asp-for="password" class="col-sm-2 control-label"></label>
                        <div class="col-sm-10">
                            <i class="glyphicon glyphicon-lock"></i>
                            <input type="password" asp-for="password" class="form-control" id="password">
                        </div>
                    </div>
                    <div class="form-group required">
                        <span asp-validation-for="password"></span>
                        <label asp-for="confirmPassword" class="col-sm-2 control-label"></label>
                        <div class="col-sm-10">
                            <i class="glyphicon glyphicon-lock"></i>
                            <input type="password" asp-for="confirmPassword" class="form-control" id="confirmPassword">
                            <span asp-validation-for="confirmPassword"></span>
                        </div>
                    </div>
                </fieldset>
                <div class="buttons">
                    <div class="pull-right">
                        <input class="btn btn-success" type="submit" value="ثبت نام" />
                    </div>
                </div>
            </form>
            <!--form End-->
        </div>
        <!--Middle Part End -->
    </div>
</div>
    <div class="col-sm-2">
    </div>
</div>

@section Scripts
{
    <script>

        $(document).ready(function() {

            $("#cellPhone").on("input",
                function() {
                    var self = $(this);
                    self.val(self.val().replace(/\D/g, ""));
                });
        });

    </script>
}