@inject IConfiguration Configuration

@model LoginViewModel
@{
    ViewData["Title"] = "ورود به سایت";
    var returnUrl = @Context.Request.Query["returnurl"];
}

<div class="container">
    <!-- Breadcrumb Start-->
    <ul class="breadcrumb">
        <li><a asp-controller="Home" asp-action="Index"><i class="fa fa-home"></i></a></li>
        <li aria-current="page">حساب کاربری</li>
        <li class="active">ورود</li>
    </ul>
    <!-- Breadcrumb End-->
    <div class="row">
        <!--Middle Part Start-->
        <div class="col-sm-9">
            <div class="row" id="content">
                @if (ViewBag.IsSuccess != null)
                {
                    <div class="alert alert-success text-center ">
                        <p class="help-block">ورود با موفقیت انجام شد</p>
                        <img src="~/images/progress.gif" />
                    </div>

                    <script>
                        // Your delay in milliseconds
                        var delay = 3000;
                        setTimeout(function () { window.location = "/UserPanel"; }, delay);
                    </script>
                }
                <div class="col-sm-6">
                </div>
                <form asp-action="Login" asp-route-returnurl="@returnUrl" method="post">
                    <input type="hidden" name="captcha" id="captchaInput" />
                    <div class="col-sm-6">
                        <div class="form-group">
                            <i class="glyphicon glyphicon-user"></i>
                            <label asp-for="userName" class="control-label"></label>
                            <input type="text" asp-for="userName" class="form-control" id="cellPhone" pattern="[0-9]*" inputmode="numeric" />
                            
                            <div asp-validation-summary="All" class="text-danger"></div>
                        </div>
                        <div class="form-group">
                            <i class="glyphicon glyphicon-lock"></i>
                            <label asp-for="password" class="control-label"></label>
                            <input type="password" asp-for="password" class="form-control" id="password"/>
                        </div>
                        <div class="form-group">
                            <label><input asp-for="rememberMe" type="checkbox" name=""> مرا بخاطر بسپار </label>
                            <br />
                        </div>
                        <input class="btn btn-success" type="submit" onclick="return validateData();" value="ورود" />
                    </div>
                </form>
            </div>
        </div>
        <!--Middle Part End -->
    </div>

</div>
@section Scripts
{
    <script type="text/javascript">
        $(document).ready(function () {

            $("#cellPhone").on("input", function() {
                var self = $(this);
                self.val(self.val().replace(/\D/g, ""));
            });
        });
        function validateData() {
            if ($("#userName").val() === "") {
                Swal.fire({
                    icon: 'error',
                    title: 'لطفاً نام کاربری (شماره همراه) را وارد کنید',
                    showConfirmButton: false,
                    timer: 1500
                });
                return false;
            }
            else if ($("#password").val() === "") {
                Swal.fire({
                    icon: 'error',
                    title: 'لطفاً کلمه عبور را وارد کنید',
                    showConfirmButton: false,
                    timer: 1500
                });
                return false;
            }
            else {
                return true;
            }
        }
    </script>
}